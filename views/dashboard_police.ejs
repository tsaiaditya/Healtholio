    </head>
    <body>
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <!-- Brand -->
            <a class="navbar-brand" href="dashboard.ejs"><h4>Healtholio</h4></a>
          
            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
          
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="#" style = "color: white" class="nav-link">Police</a>
                    </li>
                    <li class="nav-item">
                        <a href="login.ejs" style = "color: white" class="nav-link">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
        <% users.forEach(function(user){ %>
        <div class="container">
            <div style = "padding: 2%">
                <div style = "border:1px solid black; border-radius: 10px;">
                    <h3 style = "text-align: center;">Insurance Claim</h3>
                    <br>
                    <div class="row">
                        <div class="col-sm-6" style = "transform: translate(5%);">
                            <h4>Name:</h4>
                        </div>
                        <div class="col-sm-6">
                            <h4><%= user.value.name %></h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6" style = "transform: translate(5%);">
                            <h4>Insurance Type:</h4>
                        </div>
                        <div class="col-sm-6">
                            <h4><%= user.value.hospital_visits[0].insurance_type %></h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6" style = "transform: translate(5%);">
                            <h4>Cases Involved:</h4>
                        </div>
                        <div class="col-sm-6">
                            <h4><%= user.value.cases_involved %></h4>
                        </div>
                    </div>
                    <div class="row" style = "transform: translate(10%); padding: 2%">
                        <button class="btn btn-success" style = "margin-right: 4%">Accept</button>
                        <button class="btn btn-danger" style = "margin-right: 4%">Reject</button>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </body>
